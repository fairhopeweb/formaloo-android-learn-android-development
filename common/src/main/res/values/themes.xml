<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LearningApp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/learning</item>
        <item name="colorPrimaryVariant">@color/learning</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/learning</item>
        <item name="colorSecondaryVariant">@color/learning</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/bg</item>
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:fontFamily">@font/markpro</item>

    </style>

    <style name="Theme.LearningApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DrawerApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.DrawerApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_input</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/colorWhite</item>
        <item name="hintTextColor">@color/text_input</item>

    </style>


    <style name="SplashTheme" parent="Theme.LearningApp">
        <item name="android:windowBackground">@drawable/back_splash</item>
    </style>
</resources>